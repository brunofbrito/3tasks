<%= form_for @task do |f| %>
  <%= f.label :name, 'Task Name' %> 
  <%= f.text_field :name, class:"form-control" %><br>
  <%= f.label :description, 'Task Description' %> 
  <%= f.text_area(:description, rows: 3, class:"form-control") %><br>
  <%= f.submit "Add task", class: "btn btn-info" %>
<% end %>